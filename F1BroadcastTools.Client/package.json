{
  "name": "f1-broadcast-tools-client",
  "version": "0.0.0",
  "main": ".electron/main.js",
  "scripts": {
    "ng": "ng",
    "start:ng": "ng serve",
    "build:electron": "tsc -p electron/tsconfig.json",
    "watch:main": "tsc -p electron/tsconfig.json -w",
    "launch:electron": "wait-on http://localhost:4200 && wait-on .electron/main.js && cross-env NODE_ENV=development electron .",
    "start": "npm run build:electron && concurrently -k \"npm:watch:main\" \"npm:start:ng\" \"npm:launch:electron\"",
    "build": "ng build && npm run build:electron",
    "dist": "npm run build && cross-env NODE_ENV=production electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.1",
    "@angular/cdk": "^19.2.19",
    "@angular/common": "^20.2.1",
    "@angular/compiler": "^20.2.1",
    "@angular/core": "^20.2.1",
    "@angular/forms": "^20.2.1",
    "@angular/platform-browser": "^20.2.1",
    "@angular/platform-browser-dynamic": "^20.2.1",
    "@angular/router": "^20.2.1",
    "@ng-select/ng-select": "^20.1.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.1",
    "@types/electron": "^1.6.12",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.dmisadin.f1broadcasttools",
    "productName": "F1BroadcastTools",
    "files": [
      "package.json",
      ".electron/**/*",
      {
        "from": "dist/F1BroadcastTools.Client/browser",
        "to": "app",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": ".electron/main.js"
    },
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
